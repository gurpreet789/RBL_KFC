<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>
    <!--LOGGING SETTINGS-->
    <root>
      <level value="INFO"/>
      <level value="DEBUG"/>
      <level value="WARN"/>
      <!--<level value="FATAL"/>-->
      <level value="ERROR"/>
      <appender-ref ref="RBADONetAppender" />
    </root>

    <appender name="RBADONetAppender" type="log4net.Appender.AdoNetAppender,log4net">
      <bufferSize value="1" />
      <connectionType value="System.Data.SqlClient.SqlConnection, System.Data, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
      <connectionString value="Data Source=designsql.dsldev.local\DXP2012;Initial Catalog=RB_Log4NetLogs;User ID=RBUser;Password=pizzahut1234" />
      <commandText value="INSERT INTO [RB_Logs] ([Message],[Exception]) VALUES (@message, @exception)" />
      <parameter>
        <parameterName value="@message" />
        <dbType value="String" />
        <size value="4000" />
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%message" />
        </layout>
        <encoding value="utf-8" />
      </parameter>
      <parameter>
        <parameterName value="@exception" />
        <dbType value="String" />
        <size value="2000" />
        <layout type="log4net.Layout.ExceptionLayout" />
        <encoding value="utf-8" />
      </parameter>
    </appender>
  </log4net>
</configuration>